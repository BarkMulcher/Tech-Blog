<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 data-index='{{blogs}}' id="total-blogs">Create a New Entry:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blogpost-name">BlogPost:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      <div class="form-group">
        <label for="blogpost-desc">Description:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
{{#if blogs.length}}
<script src="/js/delete.js"></script>
{{/if}}
