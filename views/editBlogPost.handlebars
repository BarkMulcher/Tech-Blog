<article class="card" id="post" data-postId="{{blogData.id"}}>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">Edit Blog Post</h2><hr>
  <form class="update-blog-form" id="update-form">
    <div>
        <label for="blog-title">Blog Title:</label>
      <input class="input" name="blog-title" type="text" value="{{blog.title}}" />
    </div>
    <div>
        <label for="blog-content">Blog Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{blog.content}}" />
    </div>
    <div class="is-pulled-right">
       Created By You On: {{format_date created_at}}
      |
      <a href="/blog/{{blog.id}}">{{blog.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save Post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/js/editDelete.js"></script>
<script src="/js/comments.js"></script>